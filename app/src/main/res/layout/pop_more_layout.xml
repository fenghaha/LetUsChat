<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_conversation_more"
    android:paddingBottom="10dp"
    android:paddingTop="18dp">

    <RelativeLayout
        android:id="@+id/layout_wrapper_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_group" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/image_1"
            android:text="创建群聊"
            android:textColor="#595858" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_wrapper_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_wrapper_1">

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_friend" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_2"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/image_2"
            android:text="添加好友"
            android:textColor="#595858" />
    </RelativeLayout>


</RelativeLayout>