<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_rou"
    app:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_avatar"
            android:text="用户名"
            android:textColor="#292828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_author_name"
            android:layout_below="@+id/tv_author_name"
            android:maxLines="1"
            android:text="发布于 2018-02-28 23:10:51" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:text="blablablablablablablablablablablablablblablablablablablablablablablablablablablablablablablablablablablabla........."
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:maxHeight="250dp"
            android:maxWidth="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_nav" />


    </RelativeLayout>


</RelativeLayout>